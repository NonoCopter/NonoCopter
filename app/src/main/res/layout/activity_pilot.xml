<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="@dimen/activity_horizontal_margin"
    tools:context=".Pilot">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageView
                android:layout_width="@dimen/topbar_btn_size"
                android:layout_height="@dimen/topbar_btn_size"
                android:id="@+id/btn_emergency"
                android:src="@drawable/ic_action_warning" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <ImageView
                    android:layout_width="@dimen/topbar_btn_size"
                    android:layout_height="@dimen/topbar_btn_size"
                    android:id="@+id/btn_connect"
                    android:src="@drawable/ic_action_network_wifi" />

                <ImageView
                    android:layout_width="@dimen/topbar_btn_size"
                    android:layout_height="@dimen/topbar_btn_size"
                    android:id="@+id/btn_video"
                    android:src="@drawable/ic_action_video"/>

                <ImageView
                    android:layout_width="@dimen/topbar_btn_size"
                    android:layout_height="@dimen/topbar_btn_size"
                    android:id="@+id/btn_photo"
                    android:src="@drawable/ic_action_camera"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
